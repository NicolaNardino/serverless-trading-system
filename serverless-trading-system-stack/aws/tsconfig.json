{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2020",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "rootDir": "src",
    "outDir": "dist/",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/*": ["../dependencies/nodejs/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}